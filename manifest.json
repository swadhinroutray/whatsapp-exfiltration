{
  "name": "Autoreply!",
  "version": "1.1",
  "manifest_version": 3,
  "author": "SR",
  "description": "Let me set up some autoreply scripts for you!",
  "icons": {
    "16": "src/img/icons8-chrome-hand-drawn-16.png",
    "32": "src/img/icons8-chrome-hand-drawn-32.png",
    "48": "src/img/icons8-chrome-hand-drawn-96.png",
    "128": "src/img/icons8-chrome-hand-drawn-120.png"
  },
  "background": {
    "service_worker": "src/js/background.js"
  },
  "action": {
    "default_title": "Autoreply!",
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "activeTab", "storage", "tabs"]
}
